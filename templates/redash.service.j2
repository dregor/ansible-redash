[Unit]
Description=Make Your Company Data Driven. Connect to any data source, easily visualize and share your data. http://redash.io/
Requires=docker.service
After=docker.service

[Service]
WorkingDirectory={{ redash_home }}
ExecStart=/usr/local/bin/docker-compose up
ExecStop=/usr/local/bin/docker-compose down
ExecRestart=/usr/local/bin/docker-compose down && /usr/bin/docker-compose up
User=root

[Install]
WantedBy=multi-user.target